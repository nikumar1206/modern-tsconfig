{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"outDir": "build/dist",
		"rootDir": "src",
		"lib": ["dom", "es6", "ES2022", "esnext.asynciterable"],
		"jsx": "react",
		"skipLibCheck": true,
		"allowJs": false,
		"sourceMap": true,
		"declaration": true,
		"removeComments": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"baseUrl": "./"
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest"
	],
	"include": ["src/**/*"]
}
